{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "rules": {
    "indent": [0, 2],
    "strict": [2, "global"],
    "new-parens": 2,
    "mocha/no-exclusive-tests": "error"
  },
  "plugins": [
    "react",
    "mocha",
    "react-hooks"
  ]
}
